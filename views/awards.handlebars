<!doctype html> 

<html>
<head>
	<title>Awards</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/westudy.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0f45b5b100.js" crossorigin="anonymous"></script>
</head>

<body style="background-color: #f1f4f9">
    <!-- Header --> 
    <div class="head">
        <h1>My Awards</h1>
    </div>

    <div class="main">
        <!-- Dropdown menu to navigate between different pages of awards-->
        <div class="dropdown">
            <button class="dropbtn">Filter By:</button>
            <div class="dropdown-content">
                <a href="/awards">My Awards</a>
                <a href="/friend-awards">Friend Awards</a>
                <a href="/group-awards">Group Awards</a>
            </div>
        </div><br><br>

        <!-- Individual awards -->
        <div class="indiv-awards">
            {{#each awards}}
                <p><img class="award" src="../../images/yellow-star.png" alt="earned award">
                <b>{{name}}</b><br><i>Earned on: {{date}}</i><br>{{description}}</p><br>
            {{/each}}

            {{#each unearnedawards}}
                <p><img class="award" src="../../images/gray-star.png" alt="earned award">
                <b>{{name}}</b><br>{{description}}</p><br>
            {{/each}}            
        </div>
    </div>

    <!-- Navigation bar -->
    {{>navbar}}

    <!-- JavaScript info --> 
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="../../js/bootstrap.min.js"></script>

</body>
</html>