<!doctype html> 

<html>
<head>
	<title>Awards</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/westudy.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0f45b5b100.js" crossorigin="anonymous"></script>
</head>

<body style="background-color: #f1f4f9">
    <!-- Header --> 
    <div class="head">
        <h1>My Awards</h1>
    </div>

    <!-- Dropdown menu to navigate between different pages of awards-->
    <div class="dropdown">
        <button class="dropbtn">Filter By:</button>
        <div class="dropdown-content">
            <a href="awards.html">My Awards</a>
            <a href="friend-awards.html">Friend Awards</a>
            <a href="group-awards.html">Group Awards</a>
        </div>
    </div><br><br>

    <!-- Individual awards -->
    {{#each awards}}
    <div class="indiv-awards">
        <p><img class="award" src="../../images/yellow-star.png" alt="earned award">{{name}}<br>{{dateEarned}}<br>{{description}}</p><br>
    </div>
    {{/each}}

    <!-- Navigation bar -->
    <div class="navbar">
        <a href="../../index.html"><i class="fas fa-home"></i></a>
        <a href="tasks.html"><i class="fas fa-tasks"></i></a>
        <a href="friends.html"><i class="fas fa-users"></i></a>
        <a href="awards.html" class="active"><i class="fas fa-star"></i></a>
        <a href="login.html"><i class="fas fa-sign-out-alt"></i></a>
     </div>

    <!-- JavaScript info --> 
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="../../public/js/bootstrap.min.js"></script>

</body>
</html>