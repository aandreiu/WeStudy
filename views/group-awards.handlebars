<!doctype html> 

<html>
<head>
	<title>Awards</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/westudy.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0f45b5b100.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Andika&family=Caveat:wght@700&display=swap" rel="stylesheet">
</head>

<body style="background-color: #fddca5">
    <!-- Header --> 
    <div class="head">
        <h1>Group Awards</h1>
    </div>

    <!-- Dropdown menu to navigate between different pages of awards-->
    <div class="main">
        <div class="dropdown">
            <button class="dropbtn">Filter By:</button>
            <div class="dropdown-content">
                <a href="/awards">My Awards</a>
                <a href="/friend-awards">Friend Awards</a>
                <a href="/group-awards">Group Awards</a>
            </div>
        </div><br>

        <!-- Group 1 --> 
        <div class="group-awards" id="group1">
            <h3><img class="avatar" src="../../images/avatar.jpeg" alt="avatar"> COGS120</h3>

            {{#each group1earned}}
                <p><img class="award" src="../../images/yellow-star.png" alt="earned award"><b>{{name}}</b><br><i>Earned on: {{date}}</i><br>{{description}}</p><br>
            {{/each}}

            {{#each group1unearned}}
                <p><img class="award" src="../../images/gray-star.png" alt="unearned award"><b>{{name}}</b><br>{{description}}</p><br>
            {{/each}}
        </div><br>

        <!-- Group 2 -->
        <div class="group-awards" id="group2">
            <h3><img class="avatar" src="../../images/avatar.jpeg" alt="avatar"> COGS101B</h3>

            {{#each group2earned}}
                <p><img class="award" src="../../images/yellow-star.png" alt="earned award"><b>{{name}}</b><br><i>Earned on: {{date}}</i><br>{{description}}</p><br>
            {{/each}}

            {{#each group2unearned}}
                <p><img class="award" src="../../images/gray-star.png" alt="unearned award"><b>{{name}}</b><br>{{description}}</p><br>
            {{/each}}
        </div><br>
    </div>

 <!-- Navigation bar -->
    {{>navbar}}

    <!-- JavaScript info --> 
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="../../js/bootstrap.min.js"></script>

</body>
</html>