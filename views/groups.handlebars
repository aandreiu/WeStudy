<!doctype html> 

<html>
<head>
	<title>Groups</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/westudy.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0f45b5b100.js" crossorigin="anonymous"></script>
</head>

<body style="background-color: #f1f4f9">
     <div class="container main">
         <div class="head">
            <h1>Groups</h1>
         </div>

         <!-- Dropdown menu to navigate between different pages of awards-->
        <div class="dropdown">
            <button class="dropbtn">Filter By:</button>
            <div class="dropdown-content">
                <a href="/groups">My Groups</a>
                <a href="/friends">My Friends</a>
            </div>
        </div><br><br>

         <div id="searchList">
             <div class="search">
                 <input type="text" placeholder="Search name..." name="searchBar"id ="searchGroups" onkeyup="myGroups()">
                 <button>Search</button>
             </div><br>
         </div>
             
        <ul id="groupsList">
            {{#each groups}}
             <li>
                 <div class="groups" id="groups{{id}}">
                     <img class="avatar" src="../../images/avatar.jpeg" alt="avatar"><br><a href="/groupprofile">{{name}}</a><p>&nbsp There are currently {{participants}} group members</p>
                 </div><br>
             </li>
             {{/each}}
         </ul>
     </div>

    <!-- Navigation bar --> 
    <div class="navbar">
        <a href="/index"><i class="fas fa-home"></i></a>
        <a href="/tasks"><i class="fas fa-tasks"></i></a>
        <a href="/breaks"><i class="fas fa-clock"></i></a>
        <a href="/friends" class="active"><i class="fas fa-users"></i></a>
        <a href="/awards"><i class="fas fa-star"></i></a>
        <a href="/settings"><i class="fas fa-cog"></i></a>
     </div>

    <!-- JavaScript info -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/searchgroup.js"></script>

</body>
</html>