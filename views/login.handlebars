<body style="background-color: #f1f4f9">
  <div id="fb-root"></div>
  <div class="center">
    <center>
      <h1>WeStudy</h1>
      <div class="curved-box">
        <form>
          <label for="email"><b>Email:</b></label>
          <input type="text" name="email" id="email"><br><br>

          <label for="pw"><b>Password:</b></label>
          <input type="password" name="pw" id="pw"><br>

          <input type="checkbox" name="remember" id="remember" value="remember">
          <label for="remember">Remember Me</label>
        	<p class="facebookLogin">
                <div scope="public_profile,email" onlogin="checkLoginState();" class="fb-login-button" data-width="" data-size="small" 
                data-button-type="login_with" data-layout="rounded" data-auto-logout-link="false" data-use-continue-as="false"></div>
           </p>
      </div>
      <br><a href="/index"><Button>Login</Button></a>
      <br><br><a href="/signup"><Button>Sign Up</Button></a>
  </center>
</div>
